{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@durablr/feature-stream-helper": ["./libs/api/feature-stream-helper/src/index.ts"],
      "@durablr/feature-vercel": ["./libs/web/feature-vercel/src/index.ts"],
      "@durablr/shared-data-access-db": ["./libs/shared/data-access-db/src/index.ts"],
      "@durablr/shared-utils-schemas": ["./libs/shared/utils-schemas/src/index.ts"],
      "@durablr/web-feature-configuration": ["./libs/web/feature-configuration/src/index.ts"],
      "@durablr/web-feature-configuration/server": [
        "./libs/web/feature-configuration/src/server.ts"
      ],
      "@durablr/web-feature-dashboard": ["./libs/web/feature-dashboard/src/index.ts"],
      "@durablr/web-ui": ["./libs/web/ui/src/index.ts"]
    }
  }
}
